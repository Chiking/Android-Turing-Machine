<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_executing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="#DCDCDC"
    tools:context="com.example.huawei.maquinadeturing.activities.ExecutingActivity">


    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ACCEPTED or REJECTED!"
        android:textSize="30dp"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="20dp"/>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="200dp"
        card_view:cardBackgroundColor="#808080"
        android:layout_below="@id/status"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


        <TextView
            android:id="@+id/selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1001"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:textSize="40dp"
            />


        <ImageView
            android:id="@+id/play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/selected"
            android:src="@drawable/play_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/pause"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/selected"
            android:layout_toRightOf="@id/play"
            android:src="@drawable/pause_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/stop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/stop"
            android:layout_toLeftOf="@id/play"
            android:layout_below="@id/selected"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/next"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"/>

    </android.support.v7.widget.CardView>




</RelativeLayout>
