<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_executing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="#2E2E2E"
    tools:context="com.example.huawei.maquinadeturing.activities.ExecutingActivity">


    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ACCEPTED!"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#008000"/>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="300dp"
        card_view:cardBackgroundColor="#808080"
        android:layout_below="@id/status"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        card_view:cardCornerRadius="15dp">


        <TextView
            android:id="@+id/selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1001"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:textSize="45dp"
            android:textColor="#FFFFFF"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circpause"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginRight="60dp" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@id/selected"
            android:src="@drawable/pbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_gravity="center" />


        <ImageView
            android:id="@+id/next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/stepcirc"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="60dp"/>

    </android.support.v7.widget.CardView>




</RelativeLayout>
